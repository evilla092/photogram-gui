<h1> <%=@user_profile.username%></h1>

<dl>
<dt>ID</dt>
<dd><%=@user_profile.id%></dd>
<dt>Edit user</dt>
<dd>
<form action="/update_user/<%=@user_profile.id%>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value="<%=@user_profile.username%>">

      <button>Update user</button>
    </form>
</dd>
</dl>

<h2>Own photos (<%= @user_profile.own_photos.count%>)</h2>

<table border="1">
<th>Image</th>
<th>Caption</th>
<th>Owner</th>
<th>Posted</th>
<th></th>
<%@user_profile.own_photos.each do |a_photo|%>
<tr>
<td><img src="<%=a_photo.image%>"></td>
<td><%=a_photo.caption%></td>
<td><%=a_photo.poster.username%></td>
<td><%=a_photo.created_at%></td>
<td><a href="/photos/<%=a_photo.id%>">Show details</a></td>
</tr>
<%end%>

</table>
